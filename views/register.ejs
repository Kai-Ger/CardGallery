<% include layout/header %>

<div class="container">
    <h1 style="text-align: center">Sign up form</h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/register" method="POST" >
            <div class="form-group">
                <input class="form-control" type="text" name="username" placeholder="Username" required>
            </div>    
            <div class="form-group">   
                <input class="form-control" type="email" name="email" placeholder="E-mail" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" required>
            </div>
            <div class="form-group">   
                <input class="form-control" type="password" name="password" placeholder="Password" required>
            </div>
            <div class="form-group">
                <label>Introduction</label>
                <textarea rows="6" class="form-control" name="introduction"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>
    </div>
</div>
<% include layout/footer %>