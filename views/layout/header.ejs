    <head>
        <title>PostCards</title>
        <!-- Make site responsive on mobile/tablet -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body>
      <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
        <div class="container">
        <!-- Brand/logo -->
        <a class="navbar-brand" href="/">PostCards</a>
        
        <!-- Hamburger button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar" aria-controls="collapsibleNavbar" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        
        <!-- Links -->
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav mr-auto">
              <li class="nav-item">
                <a class="nav-link <%= typeof page !== 'undefined' && page === 'cards' ? 'active' : '' %>"  href="/cards">Home</a>
              </li>
              <li class="nav-item">            
                <form action="/cards" method="GET" class="form-inline ">
                  <% if (typeof search === "undefined" || !search ) { %> 
                    <input type="text" name="search" placeholder="Find card" class="form-control-sm mr-sm-2">
                  <% } else { %>
                    <input type="text" name="search" value="<%= search %>" class="form-control-sm mr-sm-2">
                  <% } %> 
                    <input type="submit" value="Search" class="btn btn-sm btn-outline-secondary my-2 my-sm-0"> 
                </form>
              </li>
          </ul>
        
          <ul class="navbar-nav ml-auto">
            <% if(!currentUser){ %>
              <li class="nav-item">
                <a class="nav-link <%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>" href="/login">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link <%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>" href="/register">Register</a>
              </li>
            <% } else { %>
              <% if (currentUser.isAdmin) { %>
                <li class="nav-item">
                  <a class="nav-link" href="/users/<%= currentUser.id %>" style="color:#fff"><%= currentUser.username %></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link <%= typeof page !== 'undefined' && page === 'cards/new' ? 'active' : '' %>" href="/cards/new">Add Card</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link <%= typeof page !== 'undefined' && page === 'users' ? 'active' : '' %>" href="/users">Users</a>
                </li>
                <% } else { %>
                  <li class="nav-item">
                    <a class="nav-link" href="/users/<%= currentUser.id %>"><%= currentUser.username %></a>
                  </li>  
                <% } %>  
                <li class="nav-item">
                  <a class="nav-link" href="/logout">Logout</a>
                </li>
            <% } %>
          </ul>
        </div>
        </div>
      </nav> 
  
  
      
<div class="container" style="margin-top: 60px">
  <% if(error && error.length > 0){ %>
    <div class="alert alert-danger" role="alert">
      <%= error %>
    </div>
  <% } %>
  <% if(info && info.length > 0){ %>
    <div class="alert alert-info" role="alert">
      <%= info %>
    </div>
  <% } %>
    <% if(success && success.length > 0){ %>
    <div class="alert alert-success" role="alert">
      <%= success %>
    </div>
  <% } %>
</div>



<!-- confirm delete popup MODAL -->
    <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
            
                <div class="modal-header">
					<h4 class="modal-title" id="myModalLabel">Confirm Delete</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" >
						<span aria-hidden="true">&times;</span>
					</button>   
                </div>
            
                <div class="modal-body">
                    <p>Are you sure you want to delete this? </p>
                    <p>This procedure is irreversible.</p>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-danger btn-ok" data-path="">Delete</a>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        $('#confirm-delete').on('show.bs.modal', function(e) {
            $(this).find('.btn-ok').attr('href', $(e.relatedTarget).data('href'));
        });
    </script>