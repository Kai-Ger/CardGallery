<% include ../layout/header %>

<div class="container">
    <h1 style="text-align: center">Edit user profile</h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/users/<%= user.id %>?_method=PUT" method="POST" >
            <div class="form-group">
                <label>Name</label>
                <input class="form-control" type="text" name="user[username]" value="<%= user.username %>" required>
            </div>    
            <div class="form-group"> 
                <label>Email</label>
                <input class="form-control" type="email" name="user[email]" value="<%= user.email %>" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" required>
            </div>
            <div class="form-group"> 
                <label>Password</label>
                <input class="form-control" type="password" name="user[password]" required>
            </div>
            <div class="form-group">
                <label>Introduction</label>
                <textarea rows="6" class="form-control" name="user[introduction]" ><%= user.introduction %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>
    </div>
</div>

<% include ../layout/footer %>