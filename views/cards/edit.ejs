<% include ../layout/header %>

<div class="container">
    <h1 style="text-align: center; margin-top: 10px">Edit <%= card.name %></h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/cards/<%= card.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input type="text" class="form-control" value="<%= card.name %>" name="card[name]">
            </div>
            <div class="form-group">
                <input type="number" class="form-control" value="<%= card.amount %>" name="card[amount]" min="0" step="1">
            </div>
            <div class="form-group">
                <label for="image">New Image (optional)</label>
                <input type="file" id-"image" name="image" accept="image/*">
            </div>
            <div class="form-group">
                <label>Card Description</label>
                <textarea rows="6" class="form-control" name="card[description]"><%- card.description.replace(/<br\s*\/?>/gi,"\n") %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit!</button>
            </div>
        </form>
    </div>
</div>

<% include ../layout/footer %>